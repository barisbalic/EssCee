require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('esscee', '0.0.5') do |p|
  p.description               = "A wrapper for the Windows SC command-line utility for managing services."
  p.url                       = "http://github.com/barisbalic/EssCee"
  p.author                    = "Baris Balic"
  p.email                     = "baris.balic@uswitch.com"
  p.ignore_pattern            = ["tmp/*", "script/*"]
  p.development_dependencies  = []
end